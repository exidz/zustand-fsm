{
  "name": "zustand-fsm",
  "version": "0.2.0",
  "description": "A lightweight state machine implementation for Zustand",
  "main": "dist/machine.js",
  "module": "dist/machine.mjs",
  "types": "dist/machine.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup src/machine.ts --format cjs,esm --dts",
    "lint": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "version": "git add -A src",
    "postversion": "git push && git push --tags",
    "release": "./scripts/release.sh",
    "clean": "rm -rf dist coverage",
    "prebuild": "npm run clean"
  },
  "peerDependencies": {
    "zustand": "^5.0.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/react": "^18.0.0",
    "jest": "^29.7.0",
    "react": "^18.2.0",
    "terser": "^5.36.0",
    "ts-jest": "^29.2.5",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2"
  },
  "keywords": [
    "zustand",
    "state-machine",
    "fsm",
    "state-management",
    "finite-state-machine",
    "typescript",
    "react",
    "state"
  ],
  "author": {
    "name": "Raymart Mabag",
    "url": "https://github.com/exidz"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/exidz/zustand-fsm.git"
  },
  "bugs": {
    "url": "https://github.com/exidz/zustand-fsm/issues"
  },
  "homepage": "https://github.com/exidz/zustand-fsm#readme",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/machine.d.ts",
      "require": "./dist/machine.js",
      "import": "./dist/machine.mjs"
    }
  },
  "typesVersions": {
    "*": {
      "*": [
        "dist/machine.d.ts"
      ]
    }
  }
}
